<%= render 'articles/error', obj: @category %>
<%= form_with(model: @category, class: "shadow p-3 mb-4 bg-white rounded", local: true) do |f| %>

    <div class = "form-group">
        <%= f.label :name, "Category name", class: "col-form-label" %>
        <div>
            <%= f.text_field :name, class: "form-control", placeholder: "Enter category name" %>
        </div>
    </div>

    <div class = "form-group text-center">
        <%= f.submit class: "btn btn-outline-info btn-lg" %></br>
    </div>

<% end %>