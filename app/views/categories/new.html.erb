<h1 class = "text-center mt-4" >Create a new category</h1>

<div class = "container">
    <div class = "row justify-content-center">
        <div class = "col-10">
            <%= render 'articles/error', obj: @category %>
            <%= form_with(model: @category, class: "shadow p-3 mb-4 bg-white rounded", local: true) do |f| %>

                <div class = "form-group">
                    <%= f.label :name, "Category name", class: "col-form-label" %>
                    <div>
                        <%= f.text_field :name, class: "form-control", placeholder: "Enter category name" %>
                    </div>
                </div>

                <div class = "form-group text-center">
                    <%= f.submit class: "btn btn-outline-info btn-lg" %></br>
                </div>

            <% end %>

            <div class = "form-group text-center mb-5">
                <%= link_to 'Back to Articles Listing', articles_path, class: "btn btn-outline-dark" %>
            </div>
        </div>
    </div>
</div>