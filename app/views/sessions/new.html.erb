<h1 class = "text-center mt-4" >Log In</h1>

<div class = "container">
    <div class = "row justify-content-center">
        <div class = "col-10">
            <%= form_with(scope: :sessions, url: login_path, class: "shadow p-3 mb-4 bg-white rounded", local: true) do |f| %>

                <div class = "form-group">
                    <%= f.label :email, class: "col-form-label" %>
                    <div>
                        <%= f.email_field :email, class: "form-control", placeholder: "Enter your email" %>
                    </div>
                </div>

                <div class = "form-group">
                    <%= f.label :password, class: "col-form-label" %>
                    <div>
                        <%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
                    </div>
                </div>

                <div class = "form-group text-center">
                    <%= f.submit "Log In", class: "btn btn-outline-info btn-lg" %></br>
                </div>


            <% end %>

            <div class = "form-group text-center mb-5">
                <%= link_to 'Back to Articles Listing', articles_path, class: "btn btn-outline-dark" %>
            </div>
        </div>
    </div>
</div>